                @*@Html.EditorFor(model => model.CreateCompany.City, new { htmlAttributes = new { @id = "txt-city" } })*@
                <input type="text" name="City" value="" />
                @Html.ValidationMessageFor(model => model.CreateCompany.City, "", new { @class = "text-danger" })
